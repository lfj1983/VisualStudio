<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WinCom.LoginWin"
        Title="LoginWin" Height="173" Width="300">
    <Grid>
        <Grid Height="Auto" x:Name="grid1" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        	<TextBlock Height="Auto" Margin="0" x:Name="textBlock2" Text="密码:" d:LayoutOverrides="Width, Height, GridBox" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" />
        	<TextBlock Height="Auto" Margin="0" x:Name="textBlock1" Text="用户名:" d:LayoutOverrides="Width, Height" HorizontalAlignment="Right" VerticalAlignment="Center" />
        	<TextBox x:Name="txt_password" Grid.Column="1" Margin="0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Row="1" Height="25"/>
        	<TextBox x:Name="txt_userName" Grid.Column="1" Margin="0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Height="25"/>
        	<StackPanel Margin="0" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
        		<Button Content="登录" HorizontalContentAlignment="Center" Width="75"/>
        		<Button Content="取消" Width="75" Margin="20,0,0,0"/>
        	</StackPanel>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="消息" d:LayoutOverrides="Width" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Foreground="Red"/>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="消息" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
